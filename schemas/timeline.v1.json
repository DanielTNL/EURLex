{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "timeline.v1",
  "type": "object",
  "required": ["schema","window","events"],
  "properties": {
    "schema": { "const": "timeline.v1" },
    "window": {
      "type": "object",
      "required": ["start","end","timezone"],
      "properties": {
        "start": { "type": "string", "format": "date-time" },
        "end": { "type": "string", "format": "date-time" },
        "timezone": { "type": "string" }
      }
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date","title","url","doc_type","programme","tech_area","stage","short"],
        "properties": {
          "date": { "type": "string", "format": "date-time" },
          "title": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "doc_type": { "type": "string" },
          "programme": { "type": "array", "items": { "type": "string" } },
          "tech_area": { "type": "array", "items": { "type": "string" } },
          "stage": { "type": "string" },
          "short": { "type": "string" },
          "amounts": { "type": "array", "items": { "type": "object" } }
        }
      }
    }
  },
  "additionalProperties": false
}
